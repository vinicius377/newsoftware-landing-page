---
import { Icon } from 'astro-icon/components'
---
<div>
  <div class="hamb_modal" id="ham_wrapper">
    <nav class="hamb_bar">
      <Icon name="mdi:alpha-x-circle" id="hamb_close"/>
      <ul>
        <li>
          <a href="#sobre">
          Sobre
          </a>
        </li>
        <li>
         <a href="#solucoes">
          Soluções
         </a>
        </li>
        <li>
          <a href="#pesquisa">
           Pesquisa
          </a>
        </li>
        <li>
          <button class="main_button" >Comece já!</button>
        </li>
      </ul>
    </nav>
  </div>
  <header>
    <div class="content">
      <div class="hamb" id="hamb">
        <Icon name="mdi:hamburger-menu" id="hamb-icon"/>
      </div>
      <h1 class="title"><span>New</span>Software</h1>
      <nav class="navbar">
        <ul>
          <li>
            <a href="#sobre">
            Sobre
            </a>
          </li>
          <li>
           <a href="#solucoes">
            Soluções
           </a>
          </li>
          <li>
            <a href="#pesquisa">
             Pesquisa
            </a>
          </li>
          <li>
            <button class="main_button" onclick="openWhatsapp()">Comece já!</button>
          </li>
        </ul>
      </nav>
    </div>
  </header>
</div>


<script>
  const hamb = document.getElementById('ham_wrapper');
  const links = hamb?.querySelectorAll('li');
  const hambIcon = document.getElementById('hamb-icon');
  const hambClose = document.getElementById('hamb_close');

  Array.from(links || []).forEach(el => {
    el.addEventListener('click', () => {
      hamb?.classList.remove('active')
    })
  })

  hambIcon?.addEventListener('click', ()=> {
    hamb?.classList.add('active');
    window.document.body.style.overflow = "hidden"
  })

  hambClose?.addEventListener('click', () => {
    hamb?.classList.remove('active')
    window.document.body.style.overflow = "auto"
  })

  function openWhatsapp() {
    console.log('aqui')
    const url = "https://api.whatsapp.com/send?phone=558892647889&text=Me%20interessei%20no%20sistema%20de%20voc%C3%AAs!%20Como%20posso%20come%C3%A7ar%20a%20usar%3F"
    window.open(url, '_blank')
  }

  Array.from(document.querySelectorAll('.main_button')).forEach(el => {
    el.addEventListener('click', openWhatsapp)
  })
</script>

<style>
  header {
    background-color: #27263C80;
    padding: 0.5em;
    display: flex;
    justify-content: center;
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 2;
    backdrop-filter: blur(8px);
  }

  .content {
    max-width: 70rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }

  .title {
    color: #fff;
    font-size: 1.75rem;
    font-family: 'Inter', sans-serif;
  }

  .title span {
    color: #9B9BFD
  }

  nav ul {
    display: flex;
    margin-top: 1rem;
    align-items: center;
    gap: 0.5rem;

    li  {
      list-style: none;
      padding: 0 0.5rem;

      a  {
        color: #fff;
        text-decoration: none;
      }
    }
  }

  .main_button {
    border: solid 1px #CC5BCE;
    padding: 0.25rem 1rem;
    border-radius: 4px;
    background: #27263C;
    font-size: 1.25rem;
    cursor: pointer;
    transition: 500ms;

    &:hover {
      filter: brightness(1.1);
      box-shadow: 0 0 2px 0 #fff;
    }
  }

  [data-icon] {
    font-size: 2rem;
    cursor: pointer;
  }

  .hamb_modal.active  {
    display: block;
  }

  .hamb_bar {
        height: 100%;
        width: 50%;
        background-color: #27263C;
        padding-top: 1rem;

        ul {
          flex-direction: column;
          margin-top: 0;

          li {
            width: 100%;
            height: 4rem;
            transition: 400ms;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #27263C;

            &:hover {
              filter: brightness(0.9);
            }
          }
        }
    }

    #hamb_close {
      font-size: 2rem;
      margin-left: 0.5rem;
    }

    .hamb_modal {
      display: none;
      position: absolute;
      width: 100%;
      height: 100%;
      top: 0;
      left: 0;
      background: rgba(0,0,0,0.5);
      z-index: 3;
    }

  .hamb {
    display: none; 
  }

  @media (max-width: 600px) {
    .title {
      font-size: 1.25rem;
    }

    .content {
      align-items: center;
    }
  }

  @media (max-width: 768px) {
    .title {
      font-size: 1.5rem;
    }
    .navbar {
        display: none;
    }
    .hamb {
      display: block;
    }
  }
</style>
